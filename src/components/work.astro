---
const { url, data, index, badge } = Astro.props;
const slug = url.split("/").at(-1);
---
<a href={url} class="flex gap-4 items-center border-2 px-3 py-2 rounded-lg">
  <img src={data.icon} class="w-10 h-10 rounded-md"/>
  <div class="flex flex-col">
    <h4 class="text-lg font-bold">{data.title}</h4>
    <span class="text-sm text-zinc-400">{data.description}</span>
  </div>
</a>