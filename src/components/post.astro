---
const { url, data, index, badge } = Astro.props;
const slug = url.split("/").at(-1);
---

<a href={url} class="flex flex-col gap-2 items-center">
    <img src={data.cover} class="rounded-xl aspect-video object-cover"/>
    <div class="flex flex-col gap-2">
        <h4 class="text-xl font-bold tracking-tight">{data.title}</h4>
        <span class="text-sm text-zinc-400">{data.description}</span>
    </div>
</a>